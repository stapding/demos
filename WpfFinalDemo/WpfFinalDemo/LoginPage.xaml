<Page x:Class="WpfFinalDemo.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFinalDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="30" FontWeight="Bold">Авторизация</TextBlock>
            <Label>Логин</Label>
            <TextBox x:Name="loginTB"></TextBox>
            <Label>Пароль</Label>
            <TextBox x:Name="passwordTB"></TextBox>
            <Button x:Name="authButton" Height="20" Width="100" Content="Войти" Margin="0,10,0,0" Click="authButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
