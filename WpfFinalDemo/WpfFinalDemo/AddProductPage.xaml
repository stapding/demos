<Page x:Class="WpfFinalDemo.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFinalDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="30">Добавление товара</TextBlock>
            <Label>Артикул</Label>
            <TextBox x:Name="articulTB"></TextBox>
            <Label>Название</Label>
            <TextBox x:Name="nameTB"></TextBox>
            <Label>Единицы измерения</Label>
            <TextBox x:Name="unitTB"></TextBox>
            <Label>Стоимость</Label>
            <TextBox x:Name="priceTB"></TextBox>
            <Label>Максимальная скидка</Label>
            <TextBox x:Name="maxSaleTB"></TextBox>
            <Label>Производитель</Label>
            <ComboBox x:Name="manufacturerCB"></ComboBox>
            <Label>Поставщик</Label>
            <ComboBox x:Name="deliverCB"></ComboBox>
            <Label>Категория товара</Label>
            <ComboBox x:Name="categoryCB"></ComboBox>
            <Label>Текущая скидка</Label>
            <TextBox x:Name="currentSaleTB"></TextBox>
            <Label>Количество</Label>
            <TextBox x:Name="quantityTB"></TextBox>
            <Label>Описание</Label>
            <TextBox x:Name="descriptionTB"></TextBox>
            <Label>Изображение</Label>
            <TextBox x:Name="imageTB"></TextBox>
            <Button x:Name="addButton" Margin="0,10,0,0" Content="Добавить" Width="70" Height="20" Click="addButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
