<Page x:Class="WpfDEMO.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfDEMO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontWeight="Bold" FontSize="30">Авторизация</TextBlock>
            <Label>Логин</Label>
            <TextBox x:Name="loginBox"></TextBox>
            <Label>Пароль</Label>
            <TextBox x:Name="passwordBox"></TextBox>
            <Button x:Name="loginButton" Height="20" Width="100" Margin="0,20,0,0" Content="Войти" Click="loginButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
