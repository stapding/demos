<Page x:Class="WpfDEMO.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfDEMO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontWeight="Bold" FontSize="30">Добавление товара</TextBlock>
            <Label>Артикул (6 букв-цифр)</Label>
            <TextBox x:Name="articulBox"></TextBox>
            <Label>Название</Label>
            <TextBox x:Name="nameBox"></TextBox>
            <Label>Единицы измерения</Label>
            <TextBox x:Name="unitBox"></TextBox>
            <Label>Цена</Label>
            <TextBox x:Name="costBox"></TextBox>
            <Label>Максимальная скидка</Label>
            <TextBox x:Name="maxSaleBox"></TextBox>
            <Label>Производитель</Label>
            <ComboBox x:Name="manufacturerComboBox"></ComboBox>
            <Label>Поставщик</Label>
            <ComboBox x:Name="deliverComboBox"></ComboBox>
            <Label>Категория</Label>
            <ComboBox x:Name="categoryComboBox"></ComboBox>
            <Label>Текущая скидка</Label>
            <TextBox x:Name="currentSaleBox"></TextBox>
            <Label>Количество на складе</Label>
            <TextBox x:Name="quantityBox"></TextBox>
            <Label>Описание</Label>
            <TextBox x:Name="descriptionBox"></TextBox>
            <Label>Изображение</Label>
            <TextBox x:Name="imageBox"></TextBox>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button x:Name="addButton" Height="20" Width="100" Margin="0,20,0,0" Content="Добавить" Click="addButton_Click"></Button>
                <Button x:Name="backButton" Height="20" Width="100" Margin="10,20,0,0" Content="Назад" Click="backButton_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
